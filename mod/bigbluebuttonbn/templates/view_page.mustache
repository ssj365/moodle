{{!
    @template mod_bigbluebuttonbn/view_page

    This template renders the /view.php page.

    Example context (json):
    {
    }

}}
{{{groupselector}}}

{{#serverwarning}}
  {{>core/notification}}
{{/serverwarning}}

{{#sitenotification}}
  {{>core/local/notification/cta}}
{{/sitenotification}}

{{#meetingname}}
    <h3>{{meetingname}}</h3>
{{/meetingname}}

{{#meetingdescription}}
    <h5>{{{meetingdescription}}}</h5>
{{/meetingdescription}}

{{#room}}
    {{>mod_bigbluebuttonbn/room_view}}
{{/room}}

{{#recordings}}
    <div class="mod_bigbluebuttonbn_recordings">
        {{< mod_bigbluebuttonbn/recordings_table}}
            {{$title}}{{#str}}view_section_title_recordings, mod_bigbluebuttonbn{{/str}}{{/title}}
        {{/mod_bigbluebuttonbn/recordings_table}}
        <div class="mt-3">
            {{#session.import_button}}
                {{>core/single_button}}
            {{/session.import_button}}
        </div>
    </div>
{{/recordings}}

{{#js}}
{{#instanceid}}
{{#pollinterval}}
require(['mod_bigbluebuttonbn/rooms'], function(rooms) {
    // Register action on all buttons.
    rooms.init(
        {{instanceid}},
        {{pollinterval}}
        );
    });
{{/pollinterval}}
{{/instanceid}}
{{/js}}
